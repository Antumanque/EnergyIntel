# =============================================================================
# CONFIGURACIÓN BASE DE DATOS
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=base_user
DB_PASSWORD=base_password
DB_NAME=fuentes_base

# =============================================================================
# CONFIGURACIÓN HTTP CLIENT
# =============================================================================
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# =============================================================================
# CONFIGURACIÓN DE FUENTES DE DATOS
# =============================================================================
# Define el tipo de fuente a usar: api_rest, web_static, web_dynamic, file_download
# SOURCE_TYPE=api_rest

# Para APIs REST: URLs de los endpoints
# API_URL_1=https://api.example.com/v1/data
# API_URL_2=https://api.example.com/v1/users

# Para scraping web estático: URLs de páginas
# WEB_URL_1=https://example.com/page1
# WEB_URL_2=https://example.com/page2

# Para scraping web dinámico (Playwright): URLs y selectores
# DYNAMIC_URL_1=https://example.com/dynamic-page
# DYNAMIC_SELECTOR_1=div.content

# Para descarga de archivos: URLs de archivos
# FILE_URL_1=https://example.com/files/report.pdf
# FILE_URL_2=https://example.com/files/data.xlsx

# =============================================================================
# CONFIGURACIÓN PLAYWRIGHT (para scraping dinámico)
# =============================================================================
# PLAYWRIGHT_HEADLESS=true
# PLAYWRIGHT_SLOW_MO=0
# PLAYWRIGHT_TIMEOUT=30000

# =============================================================================
# CONFIGURACIÓN DE PARSERS
# =============================================================================
# Habilitar parseo automático de archivos descargados
# AUTO_PARSE=true
# PARSER_TYPES=pdf,xlsx,csv

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
# LOG_FILE=logs/fuentes_base.log
