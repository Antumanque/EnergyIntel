# CEN Acceso Abierto - Environment Configuration
# Copy this file to .env and update with your actual values
# Do not commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION (MariaDB)
# =============================================================================

# Database host (use 'cen_db' for Docker Compose, or actual hostname for production)
DB_HOST=cen_db

# Database port (default: 3306)
DB_PORT=3306

# Database name
DB_NAME=cen_acceso_abierto

# Database user credentials
DB_USER=cen_user
DB_PASSWORD=cen_password

# Root password for MariaDB (only needed for Docker Compose)
DB_ROOT_PASSWORD=rootpassword

# =============================================================================
# API CONFIGURATION - CEN ACCESO ABIERTO
# =============================================================================

# Base URL for the CEN Public API
CEN_API_BASE_URL=https://pkb3ax2pkg.execute-api.us-east-2.amazonaws.com/prod/data/public

# Years to fetch (comma-separated, no spaces)
# For development: use only 2025
# For production: use 2020,2021,2022,2023,2024,2025
CEN_YEARS=2025

# Document types to extract (comma-separated)
# IMPORTANT: These are the EXACT strings from the API (case-sensitive!)
# - "Formulario SUCTD" (with space, SUCTD in uppercase)
# - "Formulario SAC" (with space, SAC in uppercase)
# - "Formulario_proyecto_fehaciente" (with underscores, all lowercase)
CEN_DOCUMENT_TYPES=Formulario SUCTD,Formulario SAC,Formulario_proyecto_fehaciente

# =============================================================================
# HTTP CLIENT CONFIGURATION
# =============================================================================

# Request timeout in seconds (default: 30)
REQUEST_TIMEOUT=30

# Maximum number of retry attempts for failed requests (default: 3)
MAX_RETRIES=3